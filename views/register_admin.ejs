    <title>Register Business!</title>
</head>
<body>
<form action="/users/registerNewBusinessProcess" method="post">
    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-8 col-xl-6">
                <div class="row">
                    <div class="col text-center">
                    <h1>Register</h1>
                    <p class="text-h3">Welcome New Business! </p>
                    </div>
                </div>
                <div class="row align-items-center">
                    <h2>Business Info</h2>
                </div>
                <div class="row align-items-center">
                    <div class="col mt-4">
                            <input type="text" name='address' class="form-control" placeholder="Address">
                    </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col mt-4">
                            <input type="text" name='business_name' class="form-control" placeholder="Business Name">
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col mt-4">
                                <input type="email" name='business_email' class="form-control" placeholder="Primary Business Email">
                        </div>
                    </div>
                <br/>
                    <div class="row align-items-center">
                            <h2>Administrative User Info</h2>
                    </div>
                    <div class="row align-items-center">
                        <div class="col mt-4">
                            <input type="text" name='displayname' class="form-control" placeholder="Name">
                        </div>
                    </div>
                    <div class="row align-items-center mt-4">
                            <div class="col">
                                <input type="tel" pattern="[0-9]{10}" name='phone_number' class="form-control" placeholder="Phone Number">
                            </div>
                    </div>
                    <div class="row align-items-center mt-4">
                            <div class="col">
                                <input type="email" name='email' class="form-control" placeholder="Email">
                            </div>
                    </div>
                    <div class="row justify-content-start mt-4">
                            <input type="submit" class="btn btn-primary mt-4">
                            </div>
                </div>
    </section>
    </form>
    </body>